# Database Configuration
DB_USER=dnd_user
DB_PASSWORD=your_secure_password_here
DB_NAME=dnd_game

# API Keys
# Note: In multi-user mode, each user provides their own Gemini API key
# This fallback key is only used for testing
GEMINI_API_KEY=your_gemini_api_key_here
PEXELS_API_KEY=your_pexels_api_key_here

# App Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Authentication (REQUIRED for multi-user system)
# Generate secure keys using:
# node -e "console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('hex'))"
# node -e "console.log('ENCRYPTION_KEY=' + require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_64_byte_hex_jwt_secret_here
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Optional: Disable rate limiting in development
# DISABLE_RATE_LIMIT=true
