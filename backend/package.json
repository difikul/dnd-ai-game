{
  "name": "dnd-ai-backend",
  "version": "1.0.0",
  "description": "Backend API for D&D AI Game with Gemini narrator",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:integration": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/dnd_test vitest run tests/integration",
    "test:integration:watch": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/dnd_test vitest tests/integration",
    "test:integration:ui": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/dnd_test vitest --ui tests/integration",
    "test:integration:coverage": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/dnd_test vitest run --coverage tests/integration"
  },
  "keywords": [
    "dnd",
    "dungeons-and-dragons",
    "ai",
    "gemini",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^5.22.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.7",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
